{
  "manifest_version": 2,
  "name": "Yet Another Pinboard Extension",
  "description" : "To use omnibox search, type 'pin ' plus a search term into the url bar.",
  "homepage_url": "https://github.com/seeba8/yet-another-pinboard-extension",
  "author": {
    "name": "seeba8",
    "url": "https://github.com/seeba8/"
  },
  "version": "1.1.0",
  "background": {
    "scripts": [
      "webextension-polyfill/browser-polyfill.min.js",
      "background.js",
      "omnibox.js"
    ]
  },
  "omnibox": { 
    "keyword" : "pin" 
    },
  "icons": {
    "16": "img/pinboard-16.png",
    "48": "img/pinboard-48.png",
    "96": "img/pinboard-96.png",
    "128": "img/pinboard-128.png"
  },
  "permissions": [
	  "https://api.pinboard.in/",
	  "storage",
    "tabs",
    "bookmarks"
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon":  {
        "16": "img/pinboard-icon.svg",
        "32": "img/pinboard-icon.svg"
    },
    "default_title": "Pinboard",
    "default_popup": "popup/popup.html"
  }
}
