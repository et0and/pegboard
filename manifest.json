{
  "manifest_version": 2,
  "name": "Pinboard Omnibox Suggestions",
  "description" : "To use, type 'pin' plus a search term into the url bar.",
  "homepage_url": "https://github.com/seeba8/pinboard-omnibox",
  "developer": {
    "name": "seeba8",
    "url": "https://github.com/seeba8/"
  },
  "version": "1.0",
  "applications": {
    "gecko": {
      "strict_min_version": "52.0a1"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "omnibox": { "keyword" : "pin" },

  "permissions": [
    "https://searchfox.org/",
	  "https://api.pinboard.in/",
	  "storage",
    "tabs"
  ],
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "img/pinboard-19.png",
      "38": "img/pinboard-38.png"
    },
    "default_title": "Pinboard"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "img/pinboard-19.png",
      "32": "img/pinboard-38.png"
    },
    "default_title": "Pinboard",
    "default_popup": "popup/popup.html"
  }
}
